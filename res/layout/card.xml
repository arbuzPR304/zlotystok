<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        />

    <LinearLayout
        android:background="@color/cardBackgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borowkowa Góra"
                android:textColor="#2f2f2f"
                android:textSize="18dp"
                android:id="@+id/location_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="szczyt na granicy polsko-czeskiej w Górach Złotych (Sudety Wschodnie) ..."
                android:textColor="#2f2f2f"
                android:textSize="12dp"
                android:padding="0dp"

                android:id="@+id/location_desc" />

        </LinearLayout>


        <ImageView
            android:layout_height="80dp"
            android:src="@drawable/indeks1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:id="@+id/locationImage"
            android:layout_margin="5dp"
            android:layout_width="100dp" />



    </LinearLayout>
</android.support.v7.widget.CardView>
